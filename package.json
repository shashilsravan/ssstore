{
  "name": "sstore",
  "version": "1.0.0",
  "description": "sstore website",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
    "data:import": "node backend/seeder im",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shashilsravan/sstore.git"
  },
  "author": "shashil",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shashilsravan/sstore/issues"
  },
  "homepage": "https://github.com/shashilsravan/sstore#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.17",
    "morgan": "^1.10.0",
    "node": "^17.1.0",
    "razorpay": "^2.0.6",
    "react-confirm-alert": "^2.6.2",
    "stripe": "^8.129.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
